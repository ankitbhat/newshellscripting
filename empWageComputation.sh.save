#!/bin/bash -x
echo Welcome to Employee Wage Computation Program
isabsent=0;
isparttime=1;
isfulltime=2;
wageperhour=20;
counter=0;
salary=0;
emphours=0;
empcheck=$(( $RANDOM%3 )
case $empcheck in
	$isfulltime)
	 	emphours=$(( $emphours+8 ))
		salary=$(( $salary+$(( $emphours*$wageperhour )) ))
		;;
	$isparttime)
		emphours=$(( $emphours+4 ))
		salary=$(( $salary+$(( $emphours*$wageperhour )) ))
		;;
	$isabsent)
		emphours=$(( $emphours+0 ))
		salary=$(( $salary+$(( $emphours*$wageperhour )) ))
		;;
esac
	counter=$(( $counter+1 ))
done
echo $salary
monthlywages=$(( $salary*20 ))
echo monthly wages are $monthlywages

